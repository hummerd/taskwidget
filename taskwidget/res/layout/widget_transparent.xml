<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    >
	<RelativeLayout
	    android:id="@+id/left_block"
	    style="@style/mytheme"
	    android:layout_marginEnd="1dp"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/headerClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:background="?android:selectableItemBackground"
            />
        <TextView
            android:id="@+id/textViewList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/cw_margin"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:elevation="10dp"
            />
        <ImageView
            android:id="@+id/imageRefresh"
            android:layout_width="@dimen/cw_image_refresh_size"
            android:layout_height="@dimen/cw_image_refresh_size"
            android:layout_margin="@dimen/cw_margin"
            android:contentDescription="@string/updating"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_cached_white_24px"
            android:visibility="gone"
            android:elevation="11dp"
            />
    </RelativeLayout>
    <ListView
        style="@style/mytheme"
        android:id="@+id/tasksList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@null"
        android:divider="@null"
        android:dividerHeight="3.0dip"
        android:layout_toEndOf="@+id/left_block" />
</RelativeLayout>