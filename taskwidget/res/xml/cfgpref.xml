<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:holo="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory holo:title="Tasks list preferencies" >
        <Preference
            holo:id="@+id/pref_account"
            holo:key="prefAcc"
            holo:title="Select Google account"
            />
        <Preference
            holo:id="@+id/pref_tasks_list"
            holo:enabled="false"
            holo:title="Select tasks list"
            />
        <SwitchPreference
            holo:id="@+id/pref_margin"
            holo:title="Enable widget margin"
            android:persistent="false"
            />        
    </PreferenceCategory>

</PreferenceScreen>